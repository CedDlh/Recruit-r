

<h2>Create Applicant Profile</h2>

<h3>Here is the list of current open positions </h3>
<%@positions.each do |position| %>
    <ul>
      <li><%= "#{position.id} - #{position.name}" %></li>
    </ul>
  <% end %>

<div>
<%= simple_form_for @applicant, url: applicants_path, method: :post, :html => {:class => 'form-inline'} do |f| %>
  <%= f.error_notification %>

  <%= f.input :first_name %>

  <%= f.input :last_name %>

  <%= f.input :email %>

  <%= f.select :position_id, options_for_select(@positions.collect { | position | [position.name, position.id] }, @position_id), {}, {} %>

  <%= f.button :submit, class: "btn-primary" %>
  <%#= f.button :button, "Cancel", type: "submit", class: "btn-outline-secondary" %>
<% end %>
</div>



